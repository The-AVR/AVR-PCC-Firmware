{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "poetry run python build.py"
        },
        {
            "label": "pre-commit",
            "type": "shell",
            "command": "poetry run pre-commit run --all-files",
            "dependsOn": ["install"]
        },
        {
            "label": "install",
            "command": "poetry install --sync",
            "type": "shell"
        },
        {
            "label": "setup",
            "type": "shell",
            "command": "poetry run python configure.py",
            "dependsOn": ["install"]
        },
        {
            "label": "checks",
            "type": "shell",
            "command": "poetry run pio check --skip-packages"
        }
    ]
}